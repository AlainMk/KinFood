<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alain.mk.kinfood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.MainActivity"
            android:theme="@style/AppTheme.NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.auth.ProfileActivity"
            android:label="Votre Profile"
            android:parentActivityName=".controller.MainActivity" />
        <activity
            android:name=".controller.booking.BookingActivity"
            android:label="Réserver votre table"
            android:parentActivityName=".controller.MainActivity">
        </activity>
        <activity
            android:name=".controller.detail.DetailActivity"
            android:label="Détail"
            android:parentActivityName=".controller.MainActivity">
        </activity>
        <activity
            android:name=".controller.booking.LookBookingActivity"
            android:label="Vos Réservation"
            android:parentActivityName=".controller.MainActivity">
        </activity>
    </application>

</manifest>